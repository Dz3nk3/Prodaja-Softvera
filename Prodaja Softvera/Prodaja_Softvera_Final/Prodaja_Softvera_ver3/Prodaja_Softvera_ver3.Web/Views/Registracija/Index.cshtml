@model Prodaja_Softvera_ver3.Web.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Register";
    string error_poruka = (string)TempData["error_poruka"];
    Layout = "_LayoutGuest";

}

<div class="col-md-4 col-md-offset-4">

    <h2> Logirajte se </h2>

    <form asp-action="Register">

        <div class="form-group">
            <label> Vaše ime: </label>
            <div>
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label> Vaše prezime: </label>
            <div>
                <input asp-for="Prezime" class="form-control" />
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label> Email adresa: </label>
            <div>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label> Kontakt telefon: </label>
            <div>
                <input asp-for="KontaktBr" class="form-control" />
                <span asp-validation-for="KontaktBr" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label> Datum rodjenja : </label>
            <div>
                <input asp-for="DatumRodjenja" class="form-control" />
                <span asp-validation-for="DatumRodjenja" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label> Grad: </label>
            <div>
                <select asp-for="GradID" asp-items="Model.Grad" class="form-control"></select>
                <span asp-validation-for="GradID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label> Kartica: </label>
            <div>
                <select asp-for="KarticaID" asp-items="Model.Kartica" class="form-control"></select>
                <span asp-validation-for="KarticaID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label> Vaš username: </label>
            <div>
                <input asp-for="KorisnickoIme" class="form-control" />
                <span asp-validation-for="KorisnickoIme" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label> Lozinka: </label>
            <div>
                <input asp-for="Lozinka" class="form-control" />
                <span asp-validation-for="Lozinka" class="text-danger"></span>
            </div>
        </div>



        <input type="submit" class="form-control btn btn-primary" value="Registriraj se" />
    </form>

    @if (error_poruka != null)
    {
        <br />
        <div class="alert alert-danger" role="alert">
            <strong>@error_poruka</strong>
        </div>

    }

</div>
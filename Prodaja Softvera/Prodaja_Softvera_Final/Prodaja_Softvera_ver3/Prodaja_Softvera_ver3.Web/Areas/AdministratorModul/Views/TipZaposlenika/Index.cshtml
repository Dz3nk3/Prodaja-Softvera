
@using Prodaja_Softvera_ver3.Web.Areas.AdministratorModul.ViewModels
@{
    ViewData["Title"] = "Index";
    var porukaSuccess = (string)TempData["porukaSuccess"];
    var porukaWarning = (string)TempData["porukaWarning"];
    var porukaError = (string)TempData["porukaError"];
    Layout = "~/Areas/AdministratorModul/Views/Shared/_Layout.cshtml";


}

<h1>Index</h1>


@if (porukaError != null)
{
    <div class="alert alert-danger" role="alert" id="porukaBox">
        @porukaError
    </div>
}

@if (porukaWarning != null)
{
    <div class="alert alert-warning" role="alert" id="porukaBox">
        @porukaWarning
    </div>
}

@if (porukaSuccess != null)
{
    <div class="alert alert-success" role="alert" id="porukaBox">
        @porukaSuccess
    </div>
}


<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>TipZaposlenikID</th>
            <th>Naziv</th>
            <th>Opis</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.rows)
        {
        <tr>
            <td>@x.TipZaposlenikaID</td>
            <td>@x.Naziv</td>
            <td>@x.Opis</td>
            <td>
                <a asp-action="Brisi" asp-controller="TipZaposlenika" asp-route-id="@x.TipZaposlenikaID" class="btn btn-danger">Obrisi</a>
                <br /><br />
                @*<a asp-action="UrediForm" asp-controller="TipZaposlenika" asp-route-id="@x.ZaposlenikID" class="btn btn-primary">Uredi</a>*@
            </td>
        </tr>
        }
    </tbody>
</table>

<a asp-action="Dodaj" asp-controller="TipZaposlenika" asp-route-id="@Model.ID" class="btn btn-primary">Dodaj zaposlenika</a>

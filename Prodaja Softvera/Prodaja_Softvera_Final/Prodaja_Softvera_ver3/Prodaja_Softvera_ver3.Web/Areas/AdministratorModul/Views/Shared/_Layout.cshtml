@using Prodaja_Softvera_ver3.Data.EntityModels
@using Prodaja_Softvera_ver3.Web.Helper
@using Microsoft.AspNetCore.Http

@{
    KorisnickiNalog user = Context.GetLogiraniKorisnik();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Prodaja_Softvera_ver3.Web</title>

    <title>AdminLTE 3 | Starter</title>

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">

            <!-- Left navbar links -->
            <!-- NAVBAR LEFT -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-arrow-alt-circle-left"></i></a>
                </li>
                <li>
                    <div class="nav-item d-none d-sm-inline-block">
                        <h1 class="display-4">Dobrodošli, @user?.KorisnickoIme</h1>
                        <p>Prodaja softvera</p>
                    </div>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <div>
                <a href="#" class="brand-link">
                    <img src="~/img/sp.png" alt="SP Logo" class="brand-image"
                         style="opacity: .8">
                    <span class="brand-text font-weight-light">Prodaja Softvera</span>
                </a>
            </div>

            <!-- Sidebar -->
            <div class="sidebar">

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class with font-awesome or any other icon font library -->
                        <!-- LISTA ZA ZAPOSLENIK -->
                        <li class="nav-item">
                            <a asp-area="AdministratorModul" asp-controller="AdminZaposlenik" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-user-circle"></i>
                                <p>  Zaposlenik </p>
                            </a>
                        </li>

                        <!-- LISTA ZA KLIJENTE -->
                        <li class="nav-item">
                            <a asp-area="AdministratorModul" asp-controller="Klijent" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-user"></i>
                                <p>  Klijenti </p>
                            </a>
                        </li>

                        <!-- LISTA ZA SOFTVERE-->
                        <li class="nav-item">
                            <a asp-area="AdministratorModul" asp-controller="AdminSoftver" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-window-restore"></i>
                                <p> Softver  </p>
                            </a>
                        </li>

                        <!-- LISTA ZA POSTAVKE PROFILA-->
                        <li class="nav-item">
                            <a asp-area="AdministratorModul" asp-controller="PostavkeProfila" asp-action="Index" asp-route-id="@user?.ID" class="nav-link">
                                <i class="nav-icon fas fa-pencil-alt"></i>
                                <p> Postavke profila </p>
                            </a>
                        </li>

                        <!-- LISTA ZA LOGOUT-->
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Autentifikacija" asp-action="Logout" class="nav-link">
                                <i class="nav-icon fas fa-sign-out-alt"></i>
                                <p> Logout </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>


        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" style="margin-left:0;">
            @RenderBody()

        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                @*Anything you want*@
            </div>
            <!-- Default to the left -->
            <center><strong>Copyright &copy; Prodaja Softvera 2020</strong></center>
        </footer>
    </div>
    <!-- ./wrapper -->
 
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/js/adminlte.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

@using Prodaja_Softvera_ver3.Data.EntityModels;

@model Prodaja_Softvera_ver3.Web.ViewModels.ZaposlenikUrediViewModel2

@{
    ViewData["Title"] = "UrediForm";
    Layout = "~/Areas/ZaposlenikModul/Views/Shared/_Layout.cshtml";


}

<h1 class="display-4">Dodaj Zaposlenika</h1>

<form asp-action="Snimi">

    <div class="form-group">

        <div>
            @Html.HiddenFor(s => s.ZaposlenikID)
        </div>

        <div class="form-group">
            <label>Naziv</label>
            <input asp-for="Naziv" class="form-control" />
            <span asp-validation-for="Naziv" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label>Kontakt broj</label>
            <input asp-for="Kontakt_br" class="form-control" />
            <span asp-validation-for="Kontakt_br" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label>Datum rodjenja</label>
            <input asp-for="Datum_rodjenja" class="form-control" />
            <span asp-validation-for="Datum_rodjenja" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label>Spol</label>
            <input asp-for="Spol" class="form-control" />
            <span asp-validation-for="Spol" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label>Grad </label>
            <select asp-for="GradID" asp-items="Model.Grad" class="form-control"></select>
            <span asp-validation-for="GradID" class="text-danger"></span>

        </div>


        <div class="form-group">
            <label>Fakultet </label>
            <select asp-for="FakultetID" asp-items="Model.Fakultet" class="form-control"></select>
            <span asp-validation-for="FakultetID" class="text-danger"></span>

        </div>


        <div class="form-group">
            <label>Tip zaposlenika </label>
            <select asp-for="TipZaposlenikaID" asp-items="Model.TipZaposlenika" class="form-control"></select>
            <span asp-validation-for="TipZaposlenikaID" class="text-danger"></span>

        </div>

        <input type="submit" class="btn btn-success btn-lg" value="Snimi" />
     </div>
</form>
    ViewData["Title"] = "Uredi";

}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">


<script type="text/javascript">
    function CReateOut(Ocjena) {
        for (var i = 1; i <= Ocjena; i++) {
            $("#span" + i).attr('class', 'glyphicon glyphicon-star-empty');
        }
    }

    function CReateOver(Ocjena) {
        for (var i = 1; i <= Ocjena; i++) {
            $("#span" + i).attr('class', 'glyphicon glyphicon-star');
        }
    }

    function CRateClick(Ocjena) {
        $("#lblRating").val(Ocjena);
        for (var i = 1; i <= Ocjena; i++) {
            $("#span" + i).attr('class', 'glyphicon glyphicon-star');
        }
        for (var i = Ocjena + 1; i <= 5; i++) {
            $("#span" + i).attr('class', 'glyphicon glyphicon-star-empty');
        }
    }

    function CRateSelected(Ocjena) {
        var Ocjena = $("#lblRating").val();
        for (var i = 1; i <= Ocjena; i++) {
            $("#span" + i).attr('class', 'glyphicon glyphicon-star');
        }
    }

</script>


<h1>Komentarisi i ocjeni</h1>



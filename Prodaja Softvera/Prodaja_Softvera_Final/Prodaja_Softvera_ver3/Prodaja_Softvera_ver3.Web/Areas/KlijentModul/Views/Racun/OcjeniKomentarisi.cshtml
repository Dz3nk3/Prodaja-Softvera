<form class="form-group" asp-action="Snimi">

    <div class="form-group">
        <br /><br />

        <div onmouseout="CRateSelected()">
            <span id="span1" onmouseout="CReateOut(1)" onmouseover="CReateOver(1)" onclick="CRateClick(1)" class="glyphicon glyphicon-star-empty"></span>
            <span id="span2" onmouseout="CReateOut(2)" onmouseover="CReateOver(2)" onclick="CRateClick(2)" class="glyphicon glyphicon-star-empty"></span>
            <span id="span3" onmouseout="CReateOut(3)" onmouseover="CReateOver(3)" onclick="CRateClick(3)" class="glyphicon glyphicon-star-empty"></span>
            <span id="span4" onmouseout="CReateOut(4)" onmouseover="CReateOver(4)" onclick="CRateClick(4)" class="glyphicon glyphicon-star-empty"></span>
            <span id="span5" onmouseout="CReateOut(5)" onmouseover="CReateOver(5)" onclick="CRateClick(5)" class="glyphicon glyphicon-star-empty"></span>
        </div>

        <br />

        <div>
            <input asp-for="Ocjena" type="hidden" id="lblRating" />
        </div>

        <br />

        <div class="form-group">
            <label>Komentarisi:</label>
            <textarea asp-for="Komentar" class="form-control" placeholder="Komentar..."></textarea>

        </div>

        <br /><br />

        <input asp-for="ID" hidden />
        <input asp-for="SoftverID" hidden />
        <input asp-for="SoftverNarudzbaID" hidden />

        <input type="submit" class="btn btn-primary" value="Snimi" />
    </div>

</form>


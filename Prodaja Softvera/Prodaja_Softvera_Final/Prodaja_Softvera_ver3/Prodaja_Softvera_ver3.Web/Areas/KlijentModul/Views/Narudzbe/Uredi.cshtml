@model Prodaja_Softvera_ver3.Web.Areas.KlijentModul.ViewModels.NarudzbeUrediVM
@{
    ViewData["Title"] = "Uredi";
}

<h1>Uredi</h1>

<form class="form-group">
    <input asp-for="NarudzbaID" hidden />
    <div class="form-group">



        <div class="form-group">
            <label>Naziv:</label>
            <input asp-for="Naziv" class="form-control" readonly />

        </div>

        <div class="form-group">
            <label>Datum narudzbe:</label>
            <input asp-for="Datum_narudzbe" class="form-control" readonly />

        </div>

        <div class="form-group">
            <label>Komentar:</label>
            <input asp-for="Komentar" class="form-control" readonly />

        </div>

        <div class="form-group">
            <label>Ocjena:</label>
            <input asp-for="Ocjena" class="form-control" readonly />

        </div>


        <div class="form-group">
            <label>Klijent:</label>
            <input asp-for="Klijent" class="form-control" readonly />

        </div>


        <div class="form-group">
            <label>Racun:</label>
            <input asp-for="Racun" class="form-control" readonly />

        </div>







        <a asp-action="Dodaj" asp-route-id="@Model.NarudzbaID" class="btn btn-primary">Spasi promjene</a>
    </div>
</form>